# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://t.me

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-toke
TELEGRAM_BOT_SERVICE_TOKEN=your-secure-service-tokenn
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=shared-secret-between-services

# Database Configuration (inherited from database package)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restaurant_app
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Logging
LOG_LEVEL=info

# Features
ENABLE_SWAGGER=true
ENABLE_METRICS=false

# Production specific
# DATABASE_URL=postgres://user:pass@host:port/db
