# Docker Development Environment Variables
# Copy this file to .env and update with your values

# Telegram Bot Configuration (Required for full functionality)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# Telegram Mini App Configuration
NEXT_PUBLIC_BOT_USERNAME=your_bot_username

# Database Configuration (defaults work for Docker setup)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restaurant_app
DB_USER=postgres
DB_PASSWORD=password

# API Configuration (defaults work for Docker setup)
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# JWT Secret (change in production)
JWT_SECRET=dev-secret-key-change-in-production

# Development Settings
NODE_ENV=development
ENABLE_SWAGGER=true
LOG_LEVEL=debug

# Optional: External Database URL (overrides individual DB settings)
# DATABASE_URL=postgres://user:password@host:port/database

# Optional: Redis Configuration
REDIS_URL=redis://localhost:6379

# Optional: File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/app/uploads
