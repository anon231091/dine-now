# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restaurant_app
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Advanced Database Settings
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=10000
DB_IDLE_TIMEOUT=30000

# Database URL (alternative to individual settings)
# DATABASE_URL=postgres://username:password@host:port/database

# Environment
NODE_ENV=development

# Drizzle Configuration
DRIZZLE_LOG_LEVEL=info

# Development Database
DEV_DB_NAME=restaurant_app_dev

# Test Database  
TEST_DB_NAME=restaurant_app_test

# Production Database (use environment variables)
# PROD_DB_HOST=your-production-host
